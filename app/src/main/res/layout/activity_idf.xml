<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".idf"
    android:id="@+id/tech_layout"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="#254A9F"
    >


    <!-- START Title -->

    <LinearLayout
        android:id="@+id/idf_lay1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"


        >

        <ImageView
            android:id="@+id/idf_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@raw/idf"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:transitionName="imageTransitionIDF"
            />
    </LinearLayout>

    <!-- END Title -->


    <!-- START WebView IDF -->
    <LinearLayout
        android:id="@+id/idf_lay2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical"
        >

        <WebView
            android:id="@+id/webview_idf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="textTransitionIDF"
            >


        </WebView>
    </LinearLayout>


    <!-- END WebView IDF -->

</LinearLayout>