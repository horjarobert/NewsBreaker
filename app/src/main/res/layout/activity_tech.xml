<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tech"
    android:id="@+id/tech_layout"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="#254A9F"
    >


    <!-- START Title -->

    <LinearLayout
        android:id="@+id/tech_lay1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"


        >

        <ImageView
            android:id="@+id/tech_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@raw/techspot"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:transitionName="imageTransitionTECH"

            />
    </LinearLayout>

    <!-- END Title -->


    <!-- START WebView TECH -->
    <LinearLayout
        android:id="@+id/tech_lay2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical"
        >

        <WebView
            android:id="@+id/webview_tech"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="textTransitionTECH"
            >


        </WebView>
    </LinearLayout>


    <!-- END WebView TECH -->

</LinearLayout>